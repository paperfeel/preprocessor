{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./build",
    "baseUrl": "./src",
    "paths": {
      "$internal/*": [ "./internal/*" ]
    },
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "./src"
  ]
}